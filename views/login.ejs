<!DOCTYPE html>
<html>
	<head>
		<% include shims/head.ejs %>
	</head>
	<body>
		<% include shims/header.ejs %>
		<main>
			<div class="container">
				<br>
				<br>
				<div class="row">
					<div class="col s1 l3"></div>
					<form class="myform col s10 l6 z-depth-2" method="post" action="/">
						<div class="row">
							<div class="col s12">
								<h4 class="center">Login Here</h4>
							</div>
						</div>
						<div class="row">
							<div class="col s1 l2"></div>
							<div class="input-field col s10 l8">
								<input required="true" name="email" id="email" type="email" class="validate">
								<label for="email">email</label>
							</div>
						</div>
						<div class="row">
							<div class="col s1 l2"></div>
							<div class="input-field col s10 l8">
								<input required="true" name="password" id="password" type="password" class="validate">
								<label for="password">password</label>
							</div>
						</div>
						<div class="row">
							<div class="col s3"></div>
							<button class="btn-large waves-effect waves-light col s6 blue darken-1" type="submit" name="action">Submit
					  			<i class="material-icons right">send</i>
							</button>
						</div>
						<div class="row">
							<div class="col s12">
								<br>
								<a href="/register" class="right blue-text text-darken-2">Click Here to register an account</a>		
							</div>
						</div>
						

					</form>
					<div class="col s2"></div>
				</div>
			</div>
		</main>
		<% include shims/footer.ejs %>
		<!--JavaScript at end of body for optimized loading-->
		<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
		<script type="text/javascript" src="js/materialize.min.js"></script>
	</body>
</html>

